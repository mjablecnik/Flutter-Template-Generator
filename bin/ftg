#!/bin/bash

script_path=$(dirname $0)/../scripts/

## Check required commands:
if [[ -z $(which ack) ]]; then
  echo "You need install ack-grep"
  exit 1
fi

if [[ -z $(which perl) ]]; then
  echo "You need install perl"
  exit 1
fi


if [[ ${1} == run || ${1} == generate ]]; then
  bash ${script_path}/generate.sh
elif [[ ${1} == change ]]; then
  bash ${script_path}/change.sh
elif [[ ${1} == convert ]]; then
  bash ${script_path}/convert.sh
fi
